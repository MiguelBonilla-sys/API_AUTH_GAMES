# ==========================================
# CONFIGURACIÓN PARA RAILWAY
# ==========================================

# Entorno de ejecución
ENVIRONMENT=production
DEBUG=false

# Base de datos (Railway proporcionará DATABASE_URL automáticamente)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Configuración JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-2024-make-it-very-long-and-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Flask externa
FLASK_API_URL=https://flaskapi-production-a966.up.railway.app

# Configuración CORS (ajustar según tu dominio)
CORS_ORIGINS=https://tu-dominio-frontend.vercel.app,https://tu-dominio-frontend.netlify.app

# Configuración de seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60
HTTP_TIMEOUT=30

# Configuración de logging
LOG_LEVEL=INFO

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Configuración de monitoreo
ENABLE_METRICS=false
ENABLE_HEALTH_CHECKS=true
