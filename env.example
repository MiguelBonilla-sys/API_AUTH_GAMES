# ==========================================
# CONFIGURACIÓN API AUTH GATEWAY v2.0.0
# Sistema de Roles Personalizado
# ==========================================

# Entorno de ejecución
ENVIRONMENT=development
DEBUG=true
RELOAD=true
SHOW_DOCS=true

# Base de datos
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/api_auth_games

# Configuración JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-2024-make-it-very-long-and-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Flask externa
FLASK_API_URL=http://localhost:5000

# Configuración CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Configuración de seguridad
BCRYPT_ROUNDS=10
RATE_LIMIT_PER_MINUTE=100
HTTP_TIMEOUT=30

# Configuración de logging
LOG_LEVEL=DEBUG

# Configuración del servidor
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Configuración de monitoreo
ENABLE_METRICS=false
ENABLE_HEALTH_CHECKS=true

# ==========================================
# CONFIGURACIÓN PARA PRODUCCIÓN (RAILWAY)
# ==========================================
# Para producción, cambiar los siguientes valores:

# ENVIRONMENT=production
